[Service]
Type=simple
ExecStart=/usr/local/bin/heimdall -config /etc/heimdall/config.yaml
Restart=on-failure
RestartSec=2
User=root
Group=root
WorkingDirectory=/
Environment=GOMAXPROCS=2

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

# allow reading/writing + fsnotify watching here
ReadWritePaths=/var/log/heimdall